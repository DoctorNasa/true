<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context="com.example.roongrojphetkheaw.qzy_screen.MainActivity$PlaceholderFragment">


    <RelativeLayout

        android:id="@+id/relause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Username"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/qzyfield"
            android:ems="10"
            android:gravity="center"
            android:hint="USERNAME"
            android:inputType="textPersonName"
            android:pointerIcon="wait"
            android:textColor="@color/grey_80"
            android:textColorHint="@color/grey_40"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/qzyiconmailred" />

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="vertical">

        <EditText

            android:id="@+id/Password"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/qzyfield"
            android:ems="10"
            android:gravity="center"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:pointerIcon="wait"
            android:textColor="@color/grey_80"
            android:textColorHint="@color/grey_40"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/qzyiconpassred" />

    </RelativeLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/qzybuttongo"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txtpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Forget your Password?"
        android:textAlignment="center"
        android:textColor="@color/grey_60"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="or"
        android:textColor="@color/overlay_dark_50"
        android:textSize="20dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="vertical"

        >


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/buttom_face"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="200dp" />

        <TextView
            android:textSize="16dp"
            android:text="Facbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/facebook_vector"

            />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/buttom_google"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp" />

        <TextView
            android:textSize="16dp"
            android:text="Google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/google_plus_vector"

            />



    </RelativeLayout>


</LinearLayout>